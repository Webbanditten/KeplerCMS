
@{
    Layout = null;
}<div id="group_purchase_form-body">

    <div id="group-purchase-header">
        <img src="~/images/groups/group_icon.gif" alt="" width="46" height="46">
    </div>

    <form action="#" method="post" name="group_purchase_form">

        <div id="group-name-area">
            <div id="group_name_message_error" class="error"></div>
            <label for="group_name" id="group_name_text">@DbRes.T("name", "groups"):</label>
            <input type="text" name="group_name" id="group_name" maxlength="30" onkeyup="validateGroupElements('group_name', 30, '@DbRes.T("name_max_length", "groups")');" value=""><br>
        </div>

        <div id="group-description-area">
            <div id="group_description_message_error" class="error"></div>
            <label for="description_text" id="description_text">@DbRes.T("description", "groups"):</label>
            <span id="description_chars_left">
                <label for="characters_left">@DbRes.T("characters_left", "groups"):</label>
                <input id="group_description-counter" type="text" value="255" size="3" readonly="readonly" class="amount">
            </span><br>
            <textarea name="group_description" id="group_description" onkeyup="validateGroupElements('group_description', 255, '@DbRes.T("description_max_length", "groups")');"></textarea>
        </div>



    </form>

    <div id="group-purchase-cancel-button">
        <a href="#" class="colorlink noarrow" onclick="closePurchaseResult(); return false"><span>@DbRes.T("cancel", "groups")</span></a>
    </div>

    <div id="group-purchase-button">
        <a href="#" onclick=" showGroupPurchaseConfirmation()" class="colorlink orange" style="margin-left: 0px;"><span>@DbRes.T("create", "groups")</span></a>
    </div>
    <div class="clear"></div>
</div>