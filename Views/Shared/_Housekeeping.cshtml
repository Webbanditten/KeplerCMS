@using KeplerCMS.Data.Models
@using KeplerCMS.Areas.Housekeeping.Models.Enums
@{
    var userData = (Users)ViewData["user"];
    var menu = (List<Menu>)ViewData["menu"];
    var subMenu = new List<Menu>();
    var path = Context.Request.Path;

    HousekeepingMenu activeMenuItem;

    switch (path)
    {
        case "/housekeeping/website":
            activeMenuItem = HousekeepingMenu.WebsiteAdmin;
            break;
        case "/housekeeping/menu":
            activeMenuItem = HousekeepingMenu.WebsiteAdmin;
            break;
        case "/housekeeping/pages":
            activeMenuItem = HousekeepingMenu.WebsiteAdmin;
            break;
        case "/housekeeping/news":
            activeMenuItem = HousekeepingMenu.WebsiteAdmin;
            break;
        case "/housekeeping/promotions":
            activeMenuItem = HousekeepingMenu.WebsiteAdmin;
            break;
        case "/housekeeping/upload":
            activeMenuItem = HousekeepingMenu.WebsiteAdmin;
            break;
        case "/housekeeping/admin":
            activeMenuItem = HousekeepingMenu.AdminTools;
            break;
        case "/housekeeping/catalogue":
            activeMenuItem = HousekeepingMenu.AdminTools;
            break;
        case "/housekeeping/messengercampaign":
            activeMenuItem = HousekeepingMenu.AdminTools;
            break;
        default:
            activeMenuItem = HousekeepingMenu.Frontpage;
            break;
    }
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>Housekeeping</title>

    <link rel="stylesheet" href="~/housekeeping/css/housekeeping.css">
    <link rel="stylesheet" href="~/housekeeping/css/sweetalert2.min.css">

</head>

<body>
    <div class="wrapper">
        <div class="top">
            <div class="loggedin">Logged in as @userData.Username <a href="/account/logout">Log out</a></div>
            <ul class="menu">
                <li @(activeMenuItem.Equals(HousekeepingMenu.Statistics) ? "class=active" : "")><a href="">Statistics</a></li>
                <li @(activeMenuItem.Equals(HousekeepingMenu.SystemStatus) ? "class=active" : "")><a href="">System Status</a></li>
                <li @(activeMenuItem.Equals(HousekeepingMenu.WebsiteAdmin) ? "class=active" : "")><a href="@Url.Action("Index", "Website")">Website management</a></li>
                <li @(activeMenuItem.Equals(HousekeepingMenu.HobbaTools) ? "class=active" : "")><a href="">Hobba tools</a></li>
                <li @(activeMenuItem.Equals(HousekeepingMenu.AdminTools) ? "class=active" : "")><a href="@Url.Action("Index", "Admin")">Admin tools</a></li>
            </ul>
        </div>
        <div class="content">
            <div class="sidebar">
                @{if (activeMenuItem == HousekeepingMenu.WebsiteAdmin)
                    {
                        <div class="container">
                            <div class="title">
                                Website administration
                            </div>
                            <div class="container-content">
                                <ul>
                                    <li><a href="@Url.Action("Index", "Menu")">Menu</a></li>
                                    <li><a href="@Url.Action("Index", "Pages")">Pages</a></li>
                                    <li><a href="@Url.Action("Index", "Upload")">Upload</a></li>
                                    <li><a href="@Url.Action("Index", "News")">News</a></li>
                                </ul>
                            </div>
                        </div>
                    }
                }

                @{if (activeMenuItem == HousekeepingMenu.AdminTools)
                    {
                        <div class="container">
                            <div class="title">
                                Admin tools
                            </div>
                            <div class="container-content">
                                <ul>
                                    <li><a href="@Url.Action("Index", "MessengerCampaign")">Messenger Campaign</a></li>
                                    <li><a href="@Url.Action("Index", "ItemDefinitions")">Furni</a></li>
                                    <li><a href="@Url.Action("Index", "Catalogue")">Catalogue</a></li>
                                </ul>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/housekeeping/js/jquery.js" type="text/javascript"></script>
    <script src="~/housekeeping/js/polyfill.min.js" type="text/javascript"></script>
    <script src="~/housekeeping/js/sweetalert2.min.js" type="text/javascript"></script>
    @RenderSection("scripts", false)
</body>

</html>

