@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model KeplerCMS.Models.GroupDirectory
@{
    ViewData["Title"] = DbRes.T("groups_directory_hotel", "groups");
}

<div id="page-headline">
	<div id="page-headline-breadcrums">
	</div>
	<div id="page-headline-text">@DbRes.T("groups_directory", "groups")</div>
</div>

<table border="0" cellpadding="0" cellspacing="0" width="100%" class="content-2col">
	<tbody><tr>
		<td style="width: 8px;"></td>
		<td valign="top" style="width: 202px;" class="habboPage-col">
<div id="top-3rd-level"></div>
	<div id="content-3rd-level">
			
		<ul id="third-level-navi">
				
						<li class="inactive">
							<a href="/groups/directory">@DbRes.T("groups_directory", "groups")</a>
						</li>
				
				
						<li class="inactive">
							<a href="/groups/directory/active">@DbRes.T("groups_directory_active", "groups")</a> 
						</li>
				
				
						<li class="active">
							@DbRes.T("groups_directory_hotel", "groups")
						</li>
				
				
						<li class="inactive">
							<a href="/groups/directory/recent">@DbRes.T("groups_directory_recent", "groups")</a> 
						</li>
				
		</ul>
			<div class="clear"></div>
	</div>
<div id="bottom-3rd-level"></div>
<div class="v2box red light">
	<div class="headline"><h3>@DbRes.T("groups_directory_join_header", "groups")</h3></div>
	<div class="border"><div></div></div>
	<div class="body">
        @Html.Raw(DbRes.T("groups_directory_join", "groups"))
        <div class="clear"></div>
	</div>
	<div class="bottom"><div></div></div>
</div>
		</td>		
		<td valign="top" style="width: 539px;" class="habboPage-col rightmost">



<div class="v2box blue light">
	<div class="headline"><h3>@DbRes.T("groups_directory_hotel", "groups")</h3></div>
	<div class="border"><div></div></div>
	<div class="body">
		
        <ul class="groups-toplist toplist">
            @{
                var hotelGroups = Model.Hotel.ToList();
                for(int i = 0; i < hotelGroups.Count(); i++) {
                    <li style="background-image: url(@Configuration.GetSection("keplercms")["groupBadgeUrl"]/@(hotelGroups[i].GroupBadge).gif)">	
                        <div class="group-index">@(i+1).</div>
                        <div class="group-link">
                            <a href="/groups/@hotelGroups[i].Id/id">
                                @hotelGroups[i].GroupName
                            </a>
                        </div>
                        <p>@DbRes.T("group_created", "habbohome"): <strong>@hotelGroups[i].Created.ToString("yyyy-MM-dd")</strong></p>
                    </li>
                }
            }
        </ul>
        
		<div class="clear"></div>
	</div>
	<div class="bottom"><div></div></div>
</div>

		</td>
		
        
        
        <partial name="~/Views/Shared/Sidebars/Ad/ad.cshtml" />
	</tr>
</tbody></table>