@model IEnumerable<KeplerCMS.Data.Models.Promo>;

<h1>Promos</h1>

@if (ViewData["message"] != null)
{
    <div class="message">
        @ViewData["message"]
    </div>
}
<a href="@Url.Action("Create", "Promo", new { pageId = ViewData["pageId"] })">Add</a>

<table class="blueTable">
    <thead>
        <tr>
            <th>Teaser</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                foreach (var item in Model.OrderBy(s => s.Id))
                {
                <tr>
                    <td>@item.Teaser</td>
                    <td><a href="@Url.Action("Update", "Promo", new { id = item.Id })">Edit</a> - <a href="#" onclick="removeUpload(@item.Id)">Remove</a></td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td>No promos</td>
                    <td></td>
                </tr>
            }

        }
    </tbody>
</table>

@section scripts {
    <script>
    function removeUpload(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    window.location = "@Url.Action("Remove")/" + id + "?pageId=@ViewData["PageId"]";
                }
            })
        }
    </script>
}
